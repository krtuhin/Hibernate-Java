<?xml version="1.0" encoding="UTF-8"?>

<!--add hibernate dtd file-->
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
        
<!--creating hibernate config-->
<hibernate-configuration>
    <!--database connection-->
    <session-factory>
        <!--load driver--> 
        <property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <!--url set-->
        <property name="connection.url">jdbc:oracle:thin:@localhost:1524:orcl2</property>
        <!--username and password set-->
        <property name="connection.username">scott</property>
        <property name="connection.password">system</property>
        <!--this is for query of every database is little bit different-->
        <property name="dialect">org.hibernate.dialect.Oracle9iDialect</property>
        <!--it will automatically create database when database will not be present 
        otherwise update the database-->
        <!--create command everytime creates new table and dropes the old table-->
        <property name="hbm2ddl.auto">update</property>
        <!--it will also show the query that is created by hibernate automatically-->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <!--second level cache declare-->
        <property name="cache.use_second_level_cache">true</property>
        <!--cache class map-->
        <property name="cache.region.factory_class">org.hibernate.cache.ehcache.internal.EhcacheRegionFactory</property>
        <!--map the class as table-->
        <mapping class="com.mavenp.Student"></mapping>
        
        <mapping class="com.mavenp.Address"></mapping>
        
        <mapping class="com.map.Question"></mapping>
        <mapping class="com.map.Answer"></mapping>
        <mapping class="com.map1.Employee"></mapping>
        <mapping class="com.map1.Project"></mapping>
    </session-factory>
    
</hibernate-configuration>


